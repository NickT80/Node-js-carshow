<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= Carshow.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/Carshows/<%= Carshow._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="Carshow[name]" value="<%= Carshow.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="Carshow[image]" value="<%= Carshow.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="Carshow[description]" value="<%= Carshow.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/Carshows">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>